<div class="navbar">
    <div class="logo">PCAPIFY</div>
    <div class="menu hidden" id="menu">
        <a onclick="showPage('dashboard')">Dashboard</a>
        <a onclick="showPage('upload')">Upload</a>
        <a onclick="showPage('results')">Results</a>
        <a onclick="logout()">Logout</a>
    </div>
</div>

<div class="main">

<!-- LOGIN -->
<div id="login" class="card">
    <h2>Login</h2>
    <input id="user" placeholder="Username">
    <input id="pass" type="password" placeholder="Password">
    <button onclick="login()">Login</button>
    <p id="loginErr" class="error hidden">Invalid Credentials</p>
</div>

<!-- DASHBOARD -->
<div id="dashboard" class="card hidden">
    <h2>System Overview</h2>
    <p>PCAPIFY detects suspicious traffic in PCAP files.</p>
    <p>Total Logins: <b id="count">0</b></p>
</div>

<!-- UPLOAD -->
<div id="upload" class="card hidden">
    <h2>Upload PCAP</h2>
    <input type="file" id="pcap" accept=".pcap">
    <button onclick="analyze()">Analyze</button>
    <p id="fileErr" class="error hidden">Select a PCAP file</p>
</div>

<!-- RESULTS -->
<div id="results" class="card hidden">
    <h2>Results</h2>
    <p><b>File:</b> <span id="fname"></span></p>
    <ul id="list"></ul>

    <h3>Anomaly Line Graph</h3>
    <canvas id="line"></canvas>

    <h3>Anomaly Distribution</h3>
    <canvas id="pie"></canvas>
</div>

</div>

<script>
let lineChart, pieChart;

function showPage(id){
    document.querySelectorAll('.card').forEach(d=>d.classList.add('hidden'));
    document.getElementById(id).classList.remove('hidden');
}

function login(){
    if(user.value==="admin" && pass.value==="admin"){
        loginErr.classList.add('hidden');
        menu.classList.remove('hidden');
        let c=localStorage.getItem("cnt")||0;
        c++;
        localStorage.setItem("cnt",c);
        count.innerText=c;
        showPage('dashboard');
    } else loginErr.classList.remove('hidden');
}

function logout(){
    menu.classList.add('hidden');
    showPage('login');
}

function analyze(){
    const f=pcap.files[0];
    if(!f){fileErr.classList.remove('hidden');return;}
    fileErr.classList.add('hidden');

    showPage('results');

    setTimeout(()=>{
        fname.innerText=f.name;
        list.innerHTML="";
        let data=[],a=0,n=0;

        for(let i=1;i<=20;i++){
            let s=Math.floor(Math.random()*10);
            data.push(s);
            if(s>6){
                a++;
                list.innerHTML+=`<li class="error">High anomaly at packet ${i}</li>`;
            } else n++;
        }

        drawLine(data);
        drawPie(a,n);
    },100);
}

function drawLine(data){
    if(lineChart) lineChart.destroy();
    lineChart=new Chart(line,{
        type:"line",
        data:{
            labels:data.map((_,i)=>"Pkt "+(i+1)),
            datasets:[{
                data:data,
                borderColor:"#00e6ff",
                fill:true,
                backgroundColor:"rgba(0,230,255,0.2)",
                pointBackgroundColor:data.map(v=>v>6?"#ff2b2b":"#fff")
            }]
        },
        options:{scales:{y:{beginAtZero:true,max:10}}}
    });
}

function drawPie(a,n){
    if(pieChart) pieChart.destroy();
    pieChart=new Chart(pie,{
        type:"pie",
        data:{
            labels:["Anomaly","Normal"],
            datasets:[{data:[a,n],backgroundColor:["#ff2b2b","#00e6ff"]}]
        }
    });
}
</script>

