function drawPie(anomaly, normal){
    const c=document.getElementById('pie');
    const ctx=c.getContext('2d');
    ctx.clearRect(0,0,c.width,c.height);

    let total=anomaly+normal;
    let start=0;

    const slices=[
        {val:normal,color:"#00e6ff",label:"Normal"},
        {val:anomaly,color:"#ff5252",label:"Anomaly"}
    ];

    slices.forEach(s=>{
        let angle=(s.val/total)*2*Math.PI;
        ctx.fillStyle=s.color;
        ctx.beginPath();
        ctx.moveTo(125,125);
        ctx.arc(125,125,100,start,start+angle);
        ctx.fill();
        start+=angle;
    });

    ctx.fillStyle="#fff";
    ctx.fillText("Normal",260,100);
    ctx.fillText("Anomaly",260,130);
    ctx.fillStyle="#00e6ff";
    ctx.fillRect(240,92,12,12);
    ctx.fillStyle="#ff5252";
    ctx.fillRect(240,122,12,12);
}
