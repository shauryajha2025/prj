<script>
function showPage(id){
    document.querySelectorAll('.card').forEach(c=>c.classList.add('hidden'));
    document.getElementById(id).classList.remove('hidden');
}

// Login function with counter
function login(){
    const user=document.getElementById('username').value;
    const pass=document.getElementById('password').value;
    const error=document.getElementById('loginError');

    // simple placeholder login
    if(user==="admin" && pass==="admin"){
        error.classList.add('hidden');
        document.getElementById('mainMenu').classList.remove('hidden'); // show menu

        // Update login counter in localStorage
        let count = localStorage.getItem('loginCount') || 0;
        count = parseInt(count) + 1;
        localStorage.setItem('loginCount', count);

        // Show counter on dashboard
        document.getElementById('loginCount').innerText = count;

        showPage('dashboard'); // show dashboard
    } else{
        error.classList.remove('hidden');
    }
}

function logout(){
    document.getElementById('mainMenu').classList.add('hidden'); // hide menu
    showPage('login');
    document.getElementById('username').value="";
    document.getElementById('password').value="";
}

function analyzeFile(){
    const file=document.getElementById('pcapFile').files[0];
    const error=document.getElementById('fileError');
    error.classList.add('hidden');

    if(!file){
        error.classList.remove('hidden');
        return;
    }

    document.getElementById('resultFileName').innerText=file.name;
    const list=document.getElementById('anomalyList');
    list.innerHTML="";

    let data=[];
    for(let i=1;i<=20;i++){
        let score=Math.floor(Math.random()*10);
        data.push(score);
        if(score>6){
            let li=document.createElement('li');
            li.innerHTML="<span class='error'>High anomaly score</span> at packet "+i;
            list.appendChild(li);
        }
    }
    if(list.innerHTML==="") list.innerHTML="<li>No anomalies detected</li>";

    drawGraph(data);
    showPage('resultPage');
}

function drawGraph(data){
    const c=document.getElementById('graph');
    const ctx=c.getContext('2d');
    ctx.clearRect(0,0,c.width,c.height);

    ctx.strokeStyle="#fff";
    ctx.beginPath();

    let step=c.width/(data.length-1);
    data.forEach((v,i)=>{
        let x=i*step;
        let y=c.height-(v*20);
        if(i===0) ctx.moveTo(x,y);
        else ctx.lineTo(x,y);
    });
    ctx.stroke();
}

// hide menu at start
document.getElementById('mainMenu').classList.add('hidden');
</script>

