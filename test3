<script>
/* ===== Page Navigation ===== */
function showPage(id){
    document.querySelectorAll('.card').forEach(c=>c.classList.add('hidden'));
    document.getElementById(id).classList.remove('hidden');
}

/* ===== Login ===== */
function login(){
    const user=username.value;
    const pass=password.value;

    if(user==="admin" && pass==="admin"){
        loginError.classList.add('hidden');
        mainMenu.classList.remove('hidden');

        let count=localStorage.getItem("loginCount")||0;
        count++;
        localStorage.setItem("loginCount",count);
        loginCount.innerText=count;

        showPage('dashboard');
    }else{
        loginError.classList.remove('hidden');
    }
}

function logout(){
    mainMenu.classList.add('hidden');
    username.value="";
    password.value="";
    showPage('login');
}

/* ===== Analyze ===== */
function analyzeFile(){
    const file=pcapFile.files[0];
    if(!file){
        fileError.classList.remove('hidden');
        return;
    }
    fileError.classList.add('hidden');

    resultFileName.innerText=file.name;
    anomalyList.innerHTML="";
    let data=[];

    for(let i=1;i<=20;i++){
        let score=Math.floor(Math.random()*10);
        data.push(score);
        if(score>6){
            let li=document.createElement("li");
            li.innerHTML="<span class='error'>High anomaly</span> at packet "+i;
            anomalyList.appendChild(li);
        }
    }
    if(!anomalyList.innerHTML) anomalyList.innerHTML="<li>No anomalies detected</li>";
    drawGraph(data);
    showPage('resultPage');
}

/* ===== Graph ===== */
function drawGraph(data){
    const c=graph;
    const ctx=c.getContext("2d");
    ctx.clearRect(0,0,c.width,c.height);
    ctx.strokeStyle="#fff";
    ctx.beginPath();

    let step=c.width/(data.length-1);
    data.forEach((v,i)=>{
        let x=i*step;
        let y=c.height-(v*20);
        i?ctx.lineTo(x,y):ctx.moveTo(x,y);
    });
    ctx.stroke();
}

/* ===== 3D CURSOR EFFECT (LOGIN ONLY) ===== */
const card=document.querySelector(".login-3d");

card.addEventListener("mousemove",e=>{
    const rect=card.getBoundingClientRect();
    const x=e.clientX-rect.left;
    const y=e.clientY-rect.top;

    const rotateX=-(y-rect.height/2)/15;
    const rotateY=(x-rect.width/2)/15;

    card.style.transform=`perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
});

card.addEventListener("mouseleave",()=>{
    card.style.transform="perspective(1000px) rotateX(0deg) rotateY(0deg)";
});
</script>

