<script>
function showPage(id){
    document.querySelectorAll('.card').forEach(c=>c.classList.add('hidden'));
    document.getElementById(id).classList.remove('hidden');
}

/* LOGIN */
function login(){
    if(username.value==="admin" && password.value==="admin"){
        loginError.classList.add("hidden");
        mainMenu.classList.remove("hidden");

        let c=+localStorage.getItem("loginCount")||0;
        localStorage.setItem("loginCount",++c);
        loginCount.innerText=c;

        showPage("dashboard");
    } else loginError.classList.remove("hidden");
}

function logout(){
    mainMenu.classList.add("hidden");
    showPage("login");
}

/* ANALYSIS */
let lineChart,pieChart;

function analyzeFile(){
    if(!pcapFile.files[0]){
        fileError.classList.remove("hidden"); return;
    }
    fileError.classList.add("hidden");
    resultFileName.innerText=pcapFile.files[0].name;
    anomalyList.innerHTML="";

    let d=[],a=0,n=0;
    for(let i=1;i<=20;i++){
        let v=Math.floor(Math.random()*10);
        d.push(v);
        if(v>6){ a++; anomalyList.innerHTML+=`<li class="error">High anomaly at packet ${i}</li>`;}
        else n++;
    }
    if(!a) anomalyList.innerHTML="<li>No anomalies detected</li>";

    if(lineChart) lineChart.destroy();
    lineChart=new Chart(lineGraph,{
        type:"line",
        data:{
            labels:d.map((_,i)=>`Pkt ${i+1}`),
            datasets:[{
                label:"Anomaly Score",
                data:d,
                borderColor:"#00e6ff",
                backgroundColor:"rgba(0,230,255,.25)",
                fill:true,
                tension:.4,
                pointBackgroundColor:d.map(v=>v>6?"#ff2b2b":"#fff"),
                pointRadius:6
            }]
        }
    });

    if(pieChart) pieChart.destroy();
    pieChart=new Chart(pieChart,{
        type:"pie",
        data:{
            labels:["Anomaly","Normal"],
            datasets:[{data:[a,n],backgroundColor:["#ff2b2b","#00e6ff"]}]
        }
    });

    showPage("resultPage");
}
</script>

